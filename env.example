# Supabase 설정
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google Vision API 설정
# Google Cloud Console에서 서비스 계정 JSON을 다운로드하고 Base64로 인코딩하여 설정
GOOGLE_APPLICATION_CREDENTIALS_B64=your_base64_encoded_service_account_json

# OpenAI API 설정
OPENAI_API_KEY=your_openai_api_key

# SERP API 설정 (뉴스 검색용)
# https://serpapi.com/ 에서 무료 계정 생성 후 API 키 발급
SERP_API_KEY=your_serp_api_key

# 앱 설정
NEXT_PUBLIC_STORAGE_BUCKET=business-cards

# 세션 설정 (24시간 = 86400초)
NEXT_PUBLIC_SUPABASE_JWT_EXPIRY=86400
NEXT_PUBLIC_SUPABASE_REFRESH_INTERVAL=3600